# Environment variables for FieldCopilot
# Copy this file to .env and fill in your values

# Database connection
# For tests, use: postgresql://postgres:postgres@localhost:5433/fieldcopilot_test
# For development, use your local database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/fieldcopilot_test

# Node environment
# Set to 'test' when running tests
NODE_ENV=test

# OpenAI API Key (required for voice agent and RAG)
OPENAI_API_KEY=sk-your-key-here

# OAuth credentials (optional, for connector integrations)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
